<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-currency-table" author="Vladlen Korablev">
        <comment>Создание таблицы с курсами валют</comment>

        <createTable tableName="currency_rates">
            <column name="id" type="BIGSERIAL">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_currency_rates"/>
            </column>

            <column name="currency_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>

            <column name="rate" type="DECIMAL(19, 4)">
                <constraints nullable="false"/>
            </column>

            <column name="rate_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="currency_rates"
                columnNames="currency_code, rate_date"
                constraintName="uc_currency_rate_unique"/>

        <rollback>
            <dropTable tableName="currency_rates"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
